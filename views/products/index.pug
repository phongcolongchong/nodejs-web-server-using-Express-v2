extends ../layouts/common

block content
  h1 Products

  .d-flex.align-items-center

      form.ml-auto(action="/products/search", method="GET", class="d-flex")
        input(type="text", name="q", class="form-control")
        button(class="btn btn-primary ml-2") Search

  .container
    .row
      each product in products
        .col-lg-3.col-md-4.col-sm-6
          .card.mb-4
            img.card-img-top(src= product.image, alt='img')
            .card-body
              h5.card-title= product.name
              p.card-text= product.description
              a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart

  nav
  ul.pagination.justify-content-end
    li.page-item
      a.page-link(href='#') Previous
    li.page-item
      a.page-link(href='#') 1
    li.page-item.active
      a.page-link(href='#') 2
    li.page-item
      a.page-link(href='#') 3
    li.page-item
      a.page-link(href='#') Next
        
      


